{
    "name": "flashcards_app",
    "version": "1.0.0",
    "description": "Django desktop application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux"
    },
    "devDependencies": {
        "electron": "^22.0.0",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.flashcards_app.flashcards",
        "productName": "Your Desktop App",
        "directories": {
            "output": "dist"
        },
        "files": [
            "flashcards/**/*",
            "frontend/**/*",
            "node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}